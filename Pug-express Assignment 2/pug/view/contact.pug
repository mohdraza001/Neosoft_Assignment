doctype html
head
  title
    | Contact Us
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js')
include ./header.pug
.container.mt-3
  h2(align="center")  Contact Us
  form(method='post' action="/contactdata")
    .mb-3.mt-3
      label(for='email') Email:
      input.form-control(type='email' placeholder='Enter email' name='email' pattern=".+@gmail\.com|.+@outlook\.com|.+@yahoo\.com" required)
    .mb-3
      label(for='phone') Phone:
      input.form-control(type='number' placeholder='Enter Phone Number' name='phone'  pattern="[0-9]{10}" required)
    .mb-3
      label(for='Fullname') Fullname
      input.form-control(type='text' name='name' placeholder='Fullname' required)
    .mb-3
      label(for='username') Age
      input.form-control(type='number' name='age' placeholder='Age'  pattern="[0-9]{0,2}" required)
    .mb-3
      label(for='username') City
      input.form-control(type='text' name='city' placeholder='City'  pattern="[A-Za-z]{0,15}" required)
    input.btn.btn-primary(type='submit' value='Submit')
br
include ./footer.pug 